
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/Templates/Assets/css/blog-home.css" rel="stylesheet">
<!-- Page Header -->
<header class="masthead" style="background-image: url('/Templates/Images/blog.png')">
    <div class="container">
        <div class="row">
            <div class="mx-auto">
                <div class="site-heading">
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <!-- Page Content -->
    <div class="container" ng-controller="BlogCtrl">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-9">

                <h1 class="my-4">
                    
                </h1>

                <ul uib-pagination boundary-links="true"
                    total-items="(ArticleList | filter:searchItem).length"
                    ng-model="currentPage"
                    ng-change="updatePageIndexes()"
                    class="pagination-sm"
                    items-per-page="itemsPerPage"
                    previous-text="&lsaquo;"
                    next-text="&rsaquo;"
                    first-text="&laquo;"
                    last-text="&raquo;"></ul>
                <!-- Blog Post -->
                <div class="card mb-4" ng-repeat="i in ArticleList | filter : searchItem | limitTo:itemsPerPage:(currentPage - 1) * itemsPerPage">
                    <h2 class="card-title">{{i.article_name}}</h2>
                    <a href="@Url.Action("BlogDetails", "Home")?id={{i.article_id}}">
                        <img style="cursor:pointer;" class="img-responsive" ng-src="{{i.image}}" alt="{{i.article_name}}">
                    </a>
                    <br />
                    <div class="card-body">
                        <p class="card-text">{{i.article_content_short}}</p>
                        <a id="btnCat" href="@Url.Action("BlogDetails", "Home")?id={{i.article_id}}" class="btn btn-primary">Devamı &rarr;</a>
                    </div>
                </div>

                <ul uib-pagination boundary-links="true"
                    total-items="(ArticleList | filter:searchItem).length"
                    ng-model="currentPage"
                    ng-change="updatePageIndexes()"
                    class="pagination-sm"
                    items-per-page="itemsPerPage"
                    previous-text="&lsaquo;"
                    next-text="&rsaquo;"
                    first-text="&laquo;"
                    last-text="&raquo;"></ul>
            </div>

            <!-- Sidebar Widgets Column -->
            <div class="col-md-3">

                <!-- Search Widget -->
                <form>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-search"></i></div>
                            <input type="text" class="form-control" placeholder="Ara" ng-model="searchItem">
                        </div>
                    </div>
                </form>
                <br />

                <!-- Categories Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Kategoriler</h5>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <ul class="list-unstyled mb-0">
                                    <li ng-repeat="i in artCat">
                                        <button id="btnCat" class="btn btn-block" ng-click="setCat(i)">{{i}}</button>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                @*Side Widget
                    <div class="card my-4">
                        <h5 class="card-header">Side Widget</h5>
                        <div class="card-body">
                            You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
                        </div>
                    </div>*@

            </div>

        </div>
        <!-- /.row -->

    </div>

</div>