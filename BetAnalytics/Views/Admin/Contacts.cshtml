
@{
    ViewBag.Title = "Contacts";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12">
    <h1 class="page-header">
        Contact List
    </h1>
    <ol class="breadcrumb">
        <li>
            <i class="fa fa-dashboard"></i>  <a href="@Url.Action("Index", "Admin", null)">Dashboard</a>
        </li>
        <li class="active">
            <i class="fa fa-file"></i> Contact List
        </li>
    </ol>
</div>
<div class="container">


    <div class="row" ng-controller="AdminContactPageCtrl">
        <div class="col-lg-12">
            <h2>Bordered with Striped Rows</h2>
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Email</th>
                            <th>Comment</th>
                            <th>Login IP</th>
                            <th>Create Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="i in ContactList">
                            <td>{{i.name}}</td>
                            <td>{{i.surname}}</td>
                            <td>{{i.email}}</td>
                            <td>{{i.comment}}</td>
                            <td>{{i.login_ip}}</td>
                            <td>{{i.create_date}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>